SELECT
    INTG_NAME,
    TO_CHAR(LAST_UPDATE_DATE, 'DD-MM-YYYY HH:MI:SS AM') LAST_UPDATE_DATE
FROM
    automint_seapen.XXPWC_MASTER_CONTROL_INTG
WHERE
        LAST_UPDATE_DATE <= (SELECT SYDATE FROM DUAL
                            WHERE sysdate between (trunc(sysdate)+2/24) and (trunc(sysdate)+8/24))-4/24  --2 TO 8 
    AND INTG_NAME NOT IN ( 'XXPWC_STATEMENT_LINE_EXTRACTION_ITSCO', 'XXPWC_STATEMENT_LINE_EXTRACTION_SG','XXPWC_STATEMENT_LINE_EXTRACTION_NZ','XXPWC_STATEMENT_LINE_EXTRACTION_AFR')
UNION
SELECT
    INTG_NAME,
    TO_CHAR(LAST_UPDATE_DATE, 'DD-MM-YYYY HH:MI:SS AM') LAST_UPDATE_DATE
FROM
automint_seapen.XXPWC_MASTER_CONTROL_INTG
WHERE LAST_UPDATE_DATE < sysdate - 1.05 --(1.05 means 1 day 1 hour 24 mins)
AND INTG_NAME in ('XXPWC_STATEMENT_LINE_EXTRACTION_NZ','XXPWC_STATEMENT_LINE_EXTRACTION_AFR');